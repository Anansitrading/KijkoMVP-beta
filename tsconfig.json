{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@opencut/ui": ["./packages/ui/src"],
      "@opencut/ui/*": ["./packages/ui/src/*"],
      "@opencut/editor": ["./packages/editor/src"],
      "@opencut/editor/*": ["./packages/editor/src/*"],
      "@opencut/config": ["./packages/config/src"],
      "@opencut/config/*": ["./packages/config/src/*"],
      "@opencut/db": ["./packages/db/src"],
      "@opencut/db/*": ["./packages/db/src/*"],
      "@opencut/auth": ["./packages/auth/src"],
      "@opencut/auth/*": ["./packages/auth/src/*"],
      "@opencut/langfuse": ["./packages/langfuse/src"],
      "@opencut/langfuse/*": ["./packages/langfuse/src/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
